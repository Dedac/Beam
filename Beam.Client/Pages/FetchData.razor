@using Beam.Shared
@page "/fetchdata"
@inject HttpClient Http

@if (frequencies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var frequency in frequencies)
        {
            <li>
                @frequency.Name
            </li>
        }
    </ul>
}

@functions {
FrequencyItem[] frequencies;

protected override async Task OnInitAsync()
{
    frequencies = await Http.GetJsonAsync<FrequencyItem[]>("api/Frequency/All");
}

}
