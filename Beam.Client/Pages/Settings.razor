@page "/settings"
@inject AnimationService animationService
@implements IDisposable

<AuthorizeView>
    <Authorized>
    <span>Username</span>

    <div class="input-group">
        <label class="form-control">@context.User.Identity.Name</label>
    </div>
    <span>You watched the beam pass @beamPasses times</span>
    <div id="animationHost"></div>
    </Authorized>
</AuthorizeView>
@code
{
    int beamPasses = 0;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender){
            AnimationService.BeamPassTriggered += IncrementBeamPass;
            await animationService.LoadAnimation("animationHost", 1000, 200);            
        }
    }

    void IncrementBeamPass() { 
        beamPasses++;
        StateHasChanged();
    }

    public void Dispose()
    {
        AnimationService.BeamPassTriggered -= IncrementBeamPass;
    }
}