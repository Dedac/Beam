@layout UserLayout
@page "/User"
@page "/User/{Name}"
@using Beam.Shared;
@inject IDataService data;
<h2>User Rays</h2>
@foreach (var ray in Rays)
{
    <p>
        <RayItem ray="@ray" />
    </p>
}

@code{
    [Parameter]
    public string Name {get;set;}

    List<Ray> Rays = new List<Ray>();
    
    protected override async Task OnParametersSetAsync()
    {
        Rays = await data.GetUserRays(Name);
    }
}