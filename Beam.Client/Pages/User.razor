@layout UserLayout
@page "/User/{name}"

@using Beam.Shared
@inject DataService data

<h2>User Rays</h2>

@foreach (var ray in Rays)
{
    <p>
        <RayItem ray="@ray" />
    </p>

}
@functions {
    [Parameter]
    string Name { get; set; }

    List<Ray> Rays = new List<Ray>();

    protected override async Task OnParametersSetAsync()
    {
        Rays = await data.GetUserRays(Name);

    }
}